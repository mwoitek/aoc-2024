root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.d]
indent_size = 4
max_line_length = 110
dfmt_brace_style = knr
dfmt_soft_max_line_length = 100
dfmt_space_after_cast = false

[*.sh]
binary_next_line = true
switch_case_indent = true

[Makefile]
indent_style = tab
indent_size = 8
